<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:background="#edeeef"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/user_pic_left"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            />

        <ImageView
            android:id="@+id/user_pic_right"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            />

        <LinearLayout
            android:id="@+id/header"
            android:layout_toRightOf="@id/user_pic_left"
            android:layout_toLeftOf="@id/user_pic_right"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name"
                android:text="username"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:text="January 2, 2020 6:02pm"
                android:textColor="#393a3b"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="This is a message"
        android:background="#ffffff"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingTop="14dp"
        android:paddingBottom="24dp"
        android:textIsSelectable="true"
        />
</LinearLayout>